<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".User.SetUpActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile"
        android:onClick="SaveProfileImage"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/setup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@drawable/input"
        android:layout_below="@+id/setup_image"
        android:padding="10dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/username"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:background="@drawable/input"
        android:layout_below="@+id/setup_name"
        android:padding="14dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

<!--    <EditText-->
<!--        android:id="@+id/setup_country"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Country"-->
<!--        android:textSize="20dp"-->
<!--        android:drawablePadding="10dp"-->
<!--        android:drawableStart="@drawable/country"-->
<!--        android:background="@drawable/input"-->
<!--        android:layout_below="@+id/setup_full_name"-->
<!--        android:padding="10dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginStart="40dp"-->
<!--        android:layout_marginEnd="40dp"/>-->


    <EditText
        android:id="@+id/Birthday"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/setup_full_name"
        android:clickable="false"
        android:background="@drawable/input"
        android:enabled="true"
        android:padding="10dp"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="10dp"
        android:hint="Date Of Birthday"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:focusable="true" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:ccp_areaCodeDetectedCountry="true"
            app:ccp_countryPreference="US,IN,NZ"
            app:ccpDialog_textColor="@android:color/black"
            app:ccp_showFullName="true"
            app:ccp_showPhoneCode="false"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_below="@+id/Birthday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@android:color/white"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ccp"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
       android:layout_below="@+id/label"

        android:orientation="vertical">
        <RadioButton android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:buttonTint="@color/colorAccent"
            android:text="male"
            android:onClick="onRadioButtonClicked"
            />
        <RadioButton android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:buttonTint="@color/colorAccent"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relationship status"
        android:layout_below="@+id/gender"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>


    <RadioGroup
        android:id="@+id/reletionship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/label2"

        android:orientation="vertical">
        <RadioButton android:id="@+id/single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:buttonTint="@color/colorAccent"
            android:onClick="onRadioButtonClicked"
            />
        <RadioButton android:id="@+id/married"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:buttonTint="@color/colorAccent"
            android:text="Married" />
    </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:background="@drawable/button"
        android:layout_below="@+id/reletionship"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:onClick="SaveAccountSetUpInformation"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="40dp"/>

</RelativeLayout>
</ScrollView>