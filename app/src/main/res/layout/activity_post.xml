<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.PostActivity">


    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout" />

    <EditText
        android:id="@+id/input_post_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/update_post_page_toolbar"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:hint="Write your post..."
        android:paddingStart="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/selected_post_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/input_post_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_post_text"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"
            android:layout_margin="7dp"
            android:onClick="SelectFromGalary"
            android:src="@drawable/select_image" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="7dp"
            android:onClick="VailidatePostInfo"
            android:textColor="@color/colorWhite"
            android:text="post"/>

    </LinearLayout>

</RelativeLayout>